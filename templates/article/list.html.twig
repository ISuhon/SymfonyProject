{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <h1>Articles</h1>
    <ul>
        {% for article in articles %}
            <li>
                <strong>{{ article.title }}</strong><br>
                {{ article.content }}<br>
                <small>Created at: {{ article.createdAt|date('Y-m-d H:i') }}</small>
            </li>
        {% else %}
            <li>No articles found.</li>
        {% endfor %}
    </ul>
{% endblock %}
